# EditorConfig for Google Java Format
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2
continuation_indent_size = 4
max_line_length = 100

[*.{xml,pom.xml}]
indent_style = space
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{jade,pug}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

[src/test/resources/**/*.html]
insert_final_newline = false
trim_trailing_whitespace = false
